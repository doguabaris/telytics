{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": [
			"ES2020",
			"DOM"
		],
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"types": [
			"vitest/globals"
		],
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": [
		"src"
	],
	"exclude": [
		"dist",
		"node_modules",
		"tests"
	]
}
